<div class="input-group" id="layer-item-{{id}}">
    <span class="input-group-addon">
        <input type="checkbox" id="{{id}}-visible" class="layer-visible" {{#if visible}}checked="checked"{{/if}}/><label for="{{id}}-visible"><span></span></label>
    </span>
    <span class="form-control">{{displayName}}</span>
    <span class="input-group-addon">
        <i class="fa fa-sort"></i>
        <i class="fa fa-sliders" style="cursor:pointer;"></i>
        <i class="fa fa-square" style="color: {{displayColor}}"></i>
        <!--<i class="fa fa-adjust" data-toggle="popover" data-content="n" style="cursor:pointer;"></i>-->
    </span>
</div>
