<form class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">{{t 'Opacity'}}</label>
    <div class="col-sm-10">
      <input class="form-control opacity-slider">
    </div>
  </div>
  {{#each options}}
    <div class="form-group">
      {{#if this.isRendered}}
        <label for="visualization-selector_{{this.counter}}" class="col-sm-2 control-label">
          <input type="radio" id="visualization-selector_{{this.counter}}" name="visualization-selector" class="visualization-selector" {{#if this.isChosen}} checked{{/if}}><span>{{t this.name}}</span>
          </input>
        </label>
        {{#if this.selectThree}}
          {{#if this.values}}
            <div class="col-sm-4 option-row">
              <select class="form-control layer-option" name="{{this.target}}">
                {{#each this.values}}
                  <option value="{{this.value}}" {{#if this.isCurrentB1}} selected="selected"{{/if}}>{{this.label}}</option>
                {{/each}}
              </select>
            </div>
            <div class="col-sm-4 option-row">
              <select class="form-control layer-option" name="{{this.target}}">
                {{#each this.values}}
                  <option value="{{this.value}}" {{#if this.isCurrentB2}} selected="selected"{{/if}}>{{this.label}}</option>
                {{/each}}
              </select>
            </div>
            <div class="col-sm-4 option-row">
              <select class="form-control layer-option" name="{{this.target}}">
                {{#each this.values}}
                  <option value="{{this.value}}" {{#if this.isCurrentB3}} selected="selected"{{/if}}>{{this.label}}</option>
                {{/each}}
              </select>
            </div>
          {{else if this.min}}
            <div class="col-sm-4 option-row">
              <input class="layer-option layer-option-slider"
                name="{{this.target}}"
                value="{{ this.value }}"
                data-provide="slider"
                data-range="{{ this.range }}"
                data-slider-min="{{ this.min }}"
                data-slider-max="{{ this.max }}"
                data-slider-step="{{ this.step }}"
                data-slider-value="{{ this.sliderValue }}"
                data-tooltip-position="top"
                data-slider-tooltip=""
              />
            </div>
            <div class="col-sm-4 option-row">
              <input class="layer-option layer-option-slider"
                name="{{this.target}}"
                value="{{ this.value }}"
                data-provide="slider"
                data-range="{{ this.range }}"
                data-slider-min="{{ this.min }}"
                data-slider-max="{{ this.max }}"
                data-slider-step="{{ this.step }}"
                data-slider-value="{{ this.sliderValue }}"
                data-tooltip-position="top"
                data-slider-tooltip=""
              />
            </div>
            <div class="col-sm-4 option-row">
              <input class="layer-option layer-option-slider"
                name="{{this.target}}"
                value="{{ this.value }}"
                data-provide="slider"
                data-range="{{ this.range }}"
                data-slider-min="{{ this.min }}"
                data-slider-max="{{ this.max }}"
                data-slider-step="{{ this.step }}"
                data-slider-value="{{ this.sliderValue }}"
                data-tooltip-position="top"
                data-slider-tooltip=""
              />
            </div>
          {{/if}}
        {{/if}}
      {{#unless this.selectThree }}
        <div class="col-sm-10 option-row">
          {{#if this.values}}
            <select class="form-control layer-option layer-option-selection" name="{{this.target}}">
            {{#each this.values}}
              <option value="{{this.value}}" {{#if this.isCurrentB1}} selected="selected"{{/if}}>{{this.label}}</option>
            {{/each}}
          {{else if this.min}}
            <input class="layer-option layer-option-slider"
              name="{{this.target}}"
              value="{{ this.value }}"
              data-provide="slider"
              data-range="{{ this.range }}"
              data-slider-min="{{ this.min }}"
              data-slider-max="{{ this.max }}"
              data-slider-step="{{ this.step }}"
              data-slider-value="{{ this.sliderValue }}"
              data-tooltip-position="top"
              data-slider-tooltip=""
              />
            {{/if}}
          </select>
        </div>
      {{/unless}}
    {{/if}}
    </div>
  {{/each}}
  {{#if legendUrl}}
    <div class="form-group">
      <label class="col-sm-2 control-label">{{t 'Legend'}}</label>
      <div class="col-sm-12">
        <img class="layer-legend-image" src="{{legendUrl}}" alt="Legend" />
      </div>
    </div>
  {{/if}}
</form>
