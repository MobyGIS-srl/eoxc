<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title">{{t 'Start report download' }}</h4>
    </div>
    <div class="modal-body report-body">
      <form class="form-horizontal">
        <div class="form-group">
          <div class="col-sm-2">
            <label class="control-label">{{t 'Bounding Box'}}</label>
          </div>
          <div class="col-sm-10">
            <div class="form-control input-group">
              <input class="form-control show-bbox input-sm" placeholder="Min-X" value="{{bbox.[0]}}">
              <span class="input-group-addon"> </span>
              <input class="form-control show-bbox input-sm" placeholder="Min-Y" value="{{bbox.[1]}}">
              <span class="input-group-addon"> </span>
              <input class="form-control show-bbox input-sm" placeholder="Max-X" value="{{bbox.[2]}}">
              <span class="input-group-addon"> </span>
              <input class="form-control show-bbox input-sm" placeholder="Max-Y" value="{{bbox.[3]}}">
              <span class="input-group-addon"> </span>
              <div class="input-group-btn">
                <button type="button" class="btn btn-default btn-draw-bbox">{{t 'Draw Bounding Box'}}</button>
              </div>
            </div>
          </div>
        </div>


        {{#if fields}}
        <div class="form-group input-fields">
          <div class="col-sm-2">
            <label class="control-label">{{t 'Bands'}}</label>
          </div>
          <div class="col-sm-10">
            {{#each fields}}
              <div autocomplete="off" class="checkbox-inline">
                <label>
                  <input type="checkbox" name="field" value="{{this.identifier}}"> {{this.name}}
                </label>
              </div>
            {{/each}}
          </div>
        </div>
        {{/if}}
      </form>
      <div class="size-warning alert alert-danger">
        {{t 'download_size_warning' }}
      </div>
      <div class="bbox-warning alert alert-danger">
        {{t 'max_bbox_warning' }}
      </div>
      <div class="resolution-warning alert alert-danger">
        {{t 'max_resolution_warning' }}
      </div>
      <div class="bands-warning alert alert-danger">
        {{t 'download_bands_warning' }}
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">{{t 'Close' }}</button>
      <button type="button" class="btn btn-default start-download" data-dismiss="modal">{{t 'Download' }}</button>
    </div>
  </div>
</div>
