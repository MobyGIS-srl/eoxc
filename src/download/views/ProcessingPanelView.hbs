<div class="record-details-map"/>
<div class="record-details-description">
  <div class="processing-panel">
      <form class="form-horizontal">
        {{#if processes.length}}
          <div class="form-group">
            <div class="col-sm-2">
              <label class="control-label">{{t 'Processes'}}</label>
            </div>
            <div class="col-sm-10">
              <select class="form-control select-process">
                <option>---</option>
                {{#each processes}}
                  <option value="{{this.id}}">{{this.title}}</option>
                {{/each}}
              </select>
            </div>
          </div>
          {{#each processes}}
          <div class="process-parameters process-{{this.id}}">
            {{#each this.inputs}}
              {{#if this.options}}
                <div class="form-group">
                  <div class="col-sm-2">
                    <label class="control-label">{{this.title}}</label>
                  </div>
                  <div class="col-sm-10">
                    <select class="form-control select-inputs">
                      <option>---</option>
                      {{#each this.options}}
                        <option value="{{this.id}}">{{this.value}}</option>
                      {{/each}}
                    </select>
                  </div>
                </div>
              {{else}}
                <div class="form-group">
                  <div class="col-sm-2">
                    <label class="control-label">{{this.title}}</label>
                  </div>
                  <div class="col-sm-10">
                    <div class="radio">
                      <label>
                        <input type="text">
                      </label>
                    </div>
                  </div>
                </div>
              {{/if}}
            {{/each}}
            </div>
          {{/each}}
        {{/if}}
      </form>
  </div>
</div>

